---
layout: base-layout.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{% include "view-switch.njk" %}
<div class="book-grid">
  {% for post in posts %}
    <article class="book-card">
      <a href="{{ post.url | url }}">
        {% if post.data.cover %}
          <div class="book-card-cover">
            <img src="{{ post.data.cover }}" alt="{{ post.data.title }} 表紙" loading="lazy" decoding="async">
          </div>
        {% endif %}
        <h2>{{ post.data.title }}</h2>
      </a>
      <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadableJp }}</time>
      <p>{% excerpt post %}</p>
    </article>
  {% endfor %}
</div>
