---
layout: base-layout.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
<nav class="view-switch">
  <a href="/" class="{% if page.url == '/' %}active{% endif %}">テキストのみ</a>
  <a href="/covers/" class="{% if page.url == '/covers/' %}active{% endif %}">画像つき</a>
</nav>
<div class="book-grid">
  {% for post in posts %}
    <article class="book-card">
      <a href="{{ post.url | url }}">
        {% if post.data.cover %}
          <img src="{{ post.data.cover }}" alt="{{ post.data.title }} 表紙">
        {% endif %}
        <h2>{{ post.data.title }}</h2>
      </a>
      <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadableJp }}</time>
      <p>{% excerpt post %}</p>
    </article>
  {% endfor %}
</div>
